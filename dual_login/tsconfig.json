{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./static/js/dist",
      "rootDir": "./static/js",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve"
    },
    "include": [
      "static/js/**/*.ts",
      "static/js/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "static/js/dist",
      "static/js/*.bundle.js"
    ]
  }